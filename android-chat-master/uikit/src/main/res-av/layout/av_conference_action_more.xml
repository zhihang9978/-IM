<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.gridlayout.widget.GridLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:alignmentMode="alignBounds"
        app:columnCount="4"
        app:orientation="horizontal"
        app:rowCount="3"
        app:useDefaultMargins="true">

        <LinearLayout
            android:id="@+id/inviteLinearLayout"
            style="@style/ConferenceActionItem"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/muteImageView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/av_conference_invite" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="邀请"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/chatLinearLayout"
            style="@style/ConferenceActionItem">

            <ImageView
                android:id="@+id/muteImageView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/av_conference_chat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="聊天"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/handupLinearLayout"
            style="@style/ConferenceActionItem">

            <ImageView
                android:id="@+id/handUpImageView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/av_conference_handup_selector" />

            <TextView
                android:id="@+id/handUpTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="举手"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/minimizeLinearLayout"
            style="@style/ConferenceActionItem">


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/av_conference_minimize" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="悬浮"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/recordLinearLayout"
            style="@style/ConferenceActionItem">

            <ImageView
                android:id="@+id/recordImageView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/av_conference_record_selector" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="录制"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/settingLinearLayout"
            style="@style/ConferenceActionItem">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/av_conference_setting" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="设置"
                android:textColor="@color/white" />
        </LinearLayout>
    </androidx.gridlayout.widget.GridLayout>

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/gray7"
        android:padding="5dp"
        android:text="取消"
        android:textColor="@color/white" />
</LinearLayout>
