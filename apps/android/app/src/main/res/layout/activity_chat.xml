<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <!-- 顶部标题栏（按设计文档） -->
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="@dimen/toolbar_height"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/spacing_medium"
        android:paddingEnd="@dimen/spacing_medium"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        
        <!-- 返回按钮 -->
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_back"
            android:contentDescription="返回" />
        
        <!-- 对方名称和在线状态 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张三"
                android:textSize="@dimen/text_size_large"
                android:textColor="@color/text_primary" />
            
            <!-- 在线状态指示器（按设计文档） -->
            <LinearLayout
                android:id="@+id/online_status_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="2dp">
                
                <View
                    android:id="@+id/status_indicator"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/bg_status_online" />
                
                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/status_online"
                    android:textSize="12sp"
                    android:textColor="@color/status_online" />
            </LinearLayout>
        </LinearLayout>
        
        <!-- 电话按钮 -->
        <ImageButton
            android:id="@+id/btn_voice_call"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_phone"
            android:contentDescription="@string/chat_voice_call" />
        
        <!-- 视频按钮 -->
        <ImageButton
            android:id="@+id/btn_video_call"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_video"
            android:contentDescription="@string/chat_video_call" />
        
        <!-- 更多菜单按钮（按设计文档） -->
        <ImageButton
            android:id="@+id/btn_more"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_more_vert"
            android:contentDescription="更多" />
    </LinearLayout>

    <!-- 消息列表 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_messages"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="@dimen/spacing_medium"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@id/input_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 输入框容器 -->
    <LinearLayout
        android:id="@+id/input_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_small"
        android:background="@color/background_light"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        
        <!-- 语音按钮 -->
        <ImageButton
            android:id="@+id/btn_voice_input"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_mic"
            android:contentDescription="语音输入"
            android:padding="8dp" />
        
        <!-- 输入框容器（用于切换输入方式） -->
        <FrameLayout
            android:id="@+id/input_wrapper"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/spacing_small"
            android:layout_marginEnd="@dimen/spacing_small">
            
            <!-- 文本输入框 -->
            <EditText
                android:id="@+id/et_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/input_height"
                android:background="@drawable/bg_search_input"
                android:hint="@string/chat_input_hint"
                android:paddingStart="@dimen/spacing_medium"
                android:paddingEnd="@dimen/spacing_medium"
                android:paddingTop="@dimen/spacing_small"
                android:paddingBottom="@dimen/spacing_small"
                android:maxLines="4"
                android:textSize="@dimen/text_size_normal" />
            
            <!-- 语音录制按钮（长按录音） -->
            <Button
                android:id="@+id/btn_voice_record"
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_height"
                android:text="按住 说话"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/text_primary"
                android:background="@drawable/bg_voice_record"
                android:visibility="gone" />
        </FrameLayout>
        
        <!-- 更多按钮（图片、文件等） -->
        <ImageButton
            android:id="@+id/btn_more_options"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_add"
            android:contentDescription="更多选项"
            android:padding="8dp" />
        
        <!-- 发送按钮 -->
        <Button
            android:id="@+id/btn_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_small"
            android:text="@string/chat_send"
            android:textColor="@color/white"
            android:backgroundTint="@color/primary" />
    </LinearLayout>
    
    <!-- 录音状态覆盖层 -->
    <FrameLayout
        android:id="@+id/recording_overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#80000000"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        
        <!-- 录音UI卡片 -->
        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="@dimen/spacing_large">
                
                <!-- 录音图标（带动画） -->
                <ImageView
                    android:id="@+id/iv_recording_icon"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_mic"
                    android:tint="@color/primary" />
                
                <!-- 录音时长 -->
                <TextView
                    android:id="@+id/tv_recording_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:text="00:00"
                    android:textSize="20sp"
                    android:textColor="@color/text_primary" />
                
                <!-- 提示文字 -->
                <TextView
                    android:id="@+id/tv_recording_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:text="松开发送 上滑取消"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/text_secondary"
                    android:gravity="center" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

