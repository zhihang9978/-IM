<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AA000000">

    <!-- 屏幕共享状态提示 -->
    <LinearLayout
        android:id="@+id/share_info_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/spacing_large"
        android:background="@drawable/bg_gradient_top"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        
        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_screen_share"
            android:tint="@color/primary"
            android:contentDescription="屏幕共享图标" />
        
        <TextView
            android:id="@+id/tv_peer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            android:text="与 张三 共享中"
            android:textSize="@dimen/text_size_large"
            android:textColor="@color/white" />
        
        <TextView
            android:id="@+id/tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            android:text="00:00"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/white"
            android:alpha="0.9" />
        
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            android:text="屏幕共享中..."
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/white"
            android:alpha="0.8" />
    </LinearLayout>

    <!-- 屏幕预览区域（示意） -->
    <FrameLayout
        android:id="@+id/screen_preview_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/spacing_xlarge"
        android:background="@drawable/bg_rounded_card"
        app:layout_constraintTop_toBottomOf="@id/share_info_container"
        app:layout_constraintBottom_toTopOf="@id/controls_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="您的屏幕内容正在共享给对方"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/text_secondary"
            android:gravity="center" />
    </FrameLayout>

    <!-- 底部控制按钮 -->
    <LinearLayout
        android:id="@+id/controls_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="@dimen/spacing_xlarge"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        
        <!-- 结束共享按钮 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            
            <Button
                android:id="@+id/btn_end_share"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/bg_circle_button_danger"
                android:text=""
                android:drawableTop="@drawable/ic_stop_screen_share"
                android:padding="@dimen/spacing_small" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small"
                android:text="结束共享"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

