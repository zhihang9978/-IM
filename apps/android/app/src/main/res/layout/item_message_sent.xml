<?xml version="1.0" encoding="utf-8"?>
<!-- 发送的消息气泡（右侧，蓝色） -->
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/spacing_small">

    <!-- 头像（右侧） -->
    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/avatar_size_normal"
        android:layout_height="@dimen/avatar_size_normal"
        android:layout_marginStart="@dimen/spacing_small"
        android:src="@drawable/ic_profile"
        android:background="@drawable/bg_circle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="头像" />

    <!-- 消息气泡 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/message_bubble"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/spacing_small"
        app:cardBackgroundColor="@color/message_sent"
        app:cardCornerRadius="@dimen/message_bubble_radius"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintWidth_max="@dimen/message_bubble_max_width">
        
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/message_bubble_padding"
            android:text="这是一条发送的消息"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_normal"
            android:lineSpacingExtra="2dp" />
    </androidx.cardview.widget.CardView>

    <!-- 消息时间（可选显示） -->
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_tiny"
        android:layout_marginEnd="@dimen/spacing_small"
        android:text="10:30"
        android:textSize="@dimen/text_size_small"
        android:textColor="@color/text_secondary"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/message_bubble"
        app:layout_constraintEnd_toStartOf="@id/iv_avatar" />

</androidx.constraintlayout.widget.ConstraintLayout>

